{
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "lf",
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": false,
    "strict": true,
    "target": "esnext"
  },
  "typeRoots": [
    "node_modules/@types",
    "node_modules",
    "./types"
  ],
  "exclude": [
    "dist",
    "./node_modules"
  ],
  "include": [
    "./**/*.ts"
  ]
}