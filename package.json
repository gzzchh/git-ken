{
  "name": "gitcracken",
  "description": "GitKraken utils for non-commercial use",
  "author": "KillWolfVlad",
  "version": "0.6.2",
  "license": "MIT",
  "private": true,
  "homepage": "https://pastebin.com/u/KillWolfVlad",
  "main": "dist/index.js",
  "bin": {
    "gitcracken": "dist/bin/gitcracken.js"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "gitcracken": "node dist/bin/gitcracken.js",
    "gitcracken:dev": "node $NODE_DEBUG_OPTION -r ts-node/register bin/gitcracken.ts",
    "lint": "tslint -p tsconfig.json",
    "build-ts": "tsc --project ./tsconfig.json"
  },
  "dependencies": {
    "asar": "^3.0.3",
    "chalk": "^4.1.0",
    "commander": "^6.0.0",
    "diff": "^4.0.2",
    "figlet": "^1.5.0",
    "fs-extra": "^9.0.1",
    "getmac": "^5.13.0",
    "natsort": "^2.0.2",
    "node-emoji": "^1.10.0",
    "pkg": "^4.4.9",
    "pkg-dir": "^4.2.0",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/diff": "^4.0.2",
    "@types/figlet": "^1.2.0",
    "@types/fs-extra": "^9.0.1",
    "@types/node": "^14.0.27",
    "@types/node-emoji": "^1.8.1",
    "eslint": "^7.5.0",
    "@types/uuid": "^8.0.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "files": [
    "dist",
    "patches"
  ],
  "pkg": {
    "assets": [
      "./node_modules/@types",
      "./node_modules/typescript/lib/*.d.ts",
      "src/**/*.ts",
      "./tsconfig.json"
    ]
  }
}