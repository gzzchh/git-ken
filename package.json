{
  "name": "gitcracken",
  "description": "GitKraken utils for non-commercial use",
  "author": "KillWolfVlad",
  "contributors": [
    {
      "name": "gzzchh",
      "email": "xjdzch@126.com",
      "url": "https://github.com/gzzchh"
    }
  ],
  "version": "0.7.0",
  "license": "MIT",
  "private": true,
  "homepage": "https://pastebin.com/u/KillWolfVlad",
  "main": "dist/index.js",
  "bin": {
    "gitcraken": "./dist/bin/gitcracken.js"
  },
  "scripts": {
    "build": "rimraf dist && tsc && run-s copy-files",
    "package": "pkg . --out-path package/",
    "make": "run-s build && run-s package",
    "gitcracken": "node dist/bin/gitcracken.js",
    "gitcracken:dev": "node $NODE_DEBUG_OPTION -r ts-node/register bin/gitcracken.ts",
    "lint": "tslint -p tsconfig.json",
    "build-ts": "tsc --project ./tsconfig.json",
    "copy-files": "run-s copy-patch copy-package-json",
    "copy-patch": "cp -R patches ./dist/patches",
    "copy-package-json": "cp ./package.json ./dist/package.json"
  },
  "dependencies": {
    "asar": "^3.0.3",
    "chalk": "^4.1.0",
    "commander": "^6.0.0",
    "diff": "^4.0.2",
    "figlet": "^1.5.0",
    "fs-extra": "^9.0.1",
    "natsort": "^2.0.2",
    "node-emoji": "^1.10.0",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/diff": "^4.0.2",
    "@types/figlet": "^1.2.0",
    "@types/fs-extra": "^9.0.1",
    "@types/node": "^14.0.27",
    "@types/node-emoji": "^1.8.1",
    "@types/uuid": "^8.0.0",
    "eslint": "^7.5.0",
    "npm-run-all": "^4.1.5",
    "pkg": "^4.4.9",
    "pkg-dir": "^4.2.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "files": [],
  "pkg": {
    "scripts": [],
    "assets": [
      "./node_modules/figlet/fonts/ANSI Shadow.flf",
      "./patches",
      "./dist",
      "package.json"
    ]
  }
}